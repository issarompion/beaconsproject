{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "dist",
    "target": "esnext",
    "strict": true,
    "types": [],
    "baseUrl": "./",
    "resolveJsonModule": true,
    "composite": true,
    "paths": {
      "@constants/*": ["./../../constants/*"],
      "@documentation/*": ["./../../documentation/*"],
      "@entities/*": ["./../../entities/*"],
      "@functions/*": ["./../../functions/*"],
      "@helpers/*": ["./../../helpers/*"],
      "@routes/*": ["./../../routes/*"],
      "@src/*": ["./../../*"]
    },
    "rootDir": "../../"
  },
  "include": [
    "./*.ts", "../../env.ts","../../entities/interfaces.ts"
  ]
}
