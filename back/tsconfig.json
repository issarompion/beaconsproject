{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "dist",
    "target": "esnext",
    "strict": true,
    "types": ["cypress"],
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "paths": {
      "@constants/*": ["constants/*"],
      "@documentation/*": ["documentation/*"],
      "@entities/*": ["entities/*"],
      "@functions/*": ["functions/*"],
      "@helpers/*": ["helpers/*"],
      "@routes/*": ["routes/*"],
      "@src/*": ["*"]
    }
  },
  "include": [
    "src/**/*",
    "cypress/**/*",
    "src/documentation/**/*"
  ]
}
